<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@drawable/card_background_2">

    <TextView
        android:id="@+id/Textbox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_header_background"
        android:backgroundTint="@color/barColor"
        android:padding="5dp"
        android:text=" Post "
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Textbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/hello_world"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/Image_view"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:id="@+id/CommentHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_title_background"
        android:backgroundTint="@color/barColor"
        android:padding="5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:text=" Comments :"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:orientation="vertical"
        android:layout_marginBottom="6dp"/>
</LinearLayout>