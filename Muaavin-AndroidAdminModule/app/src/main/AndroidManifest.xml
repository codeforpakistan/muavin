<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cfp.muaavin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MenuActivity"
            android:label="@string/title_activity_menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.UsersListView"
            android:label="@string/title_activity_users_list_view"></activity>
        <activity
            android:name=".ui.PostListView"
            android:label="@string/title_activity_post_list_view"></activity>
        <activity
            android:name=".ui.HighlightedPostsActivity"
            android:label="@string/title_activity_highlighted_posts"
            ></activity>
    </application>

</manifest>